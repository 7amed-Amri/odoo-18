<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_correspondence_form" model="ir.ui.view">
        <field name="name">correspondence.form</field>
        <field name="model">correspondence.record</field>
        <field name="arch" type="xml">
            <form string="Correspondence">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="correspondence_type"/>
                        <field name="reference_no"/>
                        <field name="date"/>
                        <field name="sender"/>
                        <field name="recipient"/>
                        <field name="description"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="view_correspondence_list" model="ir.ui.view">
        <field name="name">correspondence.list</field>
        <field name="model">correspondence.record</field>
        <field name="arch" type="xml">
            <list string="Correspondence">
                <field name="name"/>
                <field name="correspondence_type"/>
                <field name="reference_no"/>
                <field name="date"/>
                <field name="sender"/>
                <field name="recipient"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_correspondence" model="ir.actions.act_window">
        <field name="name">Correspondence</field>
        <field name="res_model">correspondence.record</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu with dashboard icon -->
    <menuitem id="menu_correspondence_root"
              name="Correspondence"
              web_icon="correspondence,static/description/icon.png"/>

    <menuitem id="menu_correspondence_records"
              parent="menu_correspondence_root"
              name="Records"
              action="action_correspondence"/>
</odoo>