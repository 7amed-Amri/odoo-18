<odoo>
    <template id="help_form" name="Help Form">
        <div class="container mt-4">
            <h2>Submit a Help Ticket</h2>
            <form method="post" action="/help/submit" class="mt-4">
                <div class="form-group">
                    <label>Subject</label>
                    <input type="text" name="subject" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required="required"/>
                </div>
                <div class="form-group">
                    <label>Phone (Optional)</label>
                    <input type="text" name="phone" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <textarea name="description" class="form-control" rows="6" required="required"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit Ticket</button>
            </form>
        </div>
    </template>

    <template id="help_thank_you" name="Help Thank You">
        <div class="container text-center mt-5">
            <h2>Thank You!</h2>
            <p>Your help ticket has been submitted successfully.</p>
            <p>We will review your request and get back to you shortly.</p>
            <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
    </template>

    <template id="help_page" name="Help Page">
        <t t-call="website.layout">
            <t t-call="support_ticket.help_form"/>
        </t>
    </template>

    <template id="thank_you_page" name="Thank You Page">
        <t t-call="website.layout">
            <t t-call="support_ticket.help_thank_you"/>
        </t>
    </template>
</odoo>
